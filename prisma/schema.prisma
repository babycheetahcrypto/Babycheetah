datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId Int      @unique
  username   String?
  firstName  String?
  lastName   String?
  coins      Int      @default(0)  // Add coins field
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
