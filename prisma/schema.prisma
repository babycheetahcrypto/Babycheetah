generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId  Int      @unique
  username    String
  firstName   String?
  lastName    String?
  coins       Int      @default(0)
  proitperhour Int      @default(0)
  proitperday  Int      @default(0)
  shopItems ShopItem[]
  premiumShopItems PremiumShopItem[]
  tasks Task[]
  dailyReward DailyReward[]
  unlockedLevels UnlockedLevel[]
  clickPower ClickPower[]
  friendsCoins FriendsCoins[]
  energy Energy[]
  pphAccumulated PPHAccumulated[]
  multiplier Multiplier[]
  multiplierEndTime MultiplierEndTime
  boosterCooldown BoosterCooldown[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}