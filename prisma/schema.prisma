generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Ensure this is set to your MongoDB connection string
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId Int     @unique
  username   String?
  firstName  String?
  lastName   String?
  coins     Int     @default(0)
  referrals Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}